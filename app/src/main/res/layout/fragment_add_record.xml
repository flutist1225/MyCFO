<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Account.AddRecord.AddRecordFragment"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/idAddRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <!-- View 1 快捷键 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/quickKeyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/column_quick_key_text" />

                <Button
                    android:id="@+id/idButtonStopCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/quickKey_stop_car"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/idButtonBuyVegetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/quickKey_buy_vegetable"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/idButtonEatSomething"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/quickKey_eat_something"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/idButtonRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/quickKey_restaurant"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <!-- View 2 类别 -->
            <LinearLayout
                android:id="@+id/accountIdCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/column_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/column_category"
                    android:layout_gravity="center_vertical"/>

                <com.changda123.www.mycfo.Util.CustomRadioGroup
                    android:id="@+id/idRadioGroupCalegory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- View 3 金额 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/column_price" />

                <EditText
                    android:id="@+id/idEditTextPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_price"
                    android:inputType="numberDecimal"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- View 4 事件 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/column_event" />

                <EditText
                    android:id="@+id/idEditTextEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_event"
                    android:inputType="textPersonName"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- View 5 时间 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/column_time" />

                <TextView
                    android:id="@+id/idEditTextTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_time"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- View 6 为谁 -->

            <!-- View 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center">

                <Button
                    android:id="@+id/idButtonAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/button_add"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/idButtonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_again"
                    tools:ignore="ButtonStyle"/>

            </LinearLayout>

            <!-- View 8 -->
            <include layout="@layout/button_with_background" />

        </LinearLayout>

</ScrollView>